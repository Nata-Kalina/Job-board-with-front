<%= form_with(model: [ @job, @account, application ], url: job_account_applications_path(@job, @account), local: true) do |form| %>
  <% if application.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(application.errors.count, "error") %> prohibited this application from being saved:</h2>

      <ul>
        <% application.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :resume, style: "display: block" %>
    <%= form.text_field :resume %>
  </div>

  <div>
    <%= form.label :cover_letter, style: "display: block" %>
    <%= form.text_field :cover_letter %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, ['applied', 'received', 'pending', 'incomplete', 'accepted', 'rejected'] %>
  </div>

  <div>
    <%= form.label :notes, style: "display: block" %>
    <%= form.text_field :notes %>
  </div>

  <div>
    <%= form.label :job_id, style: "display: block" %>
    <%= form.text_field :job_id %>
  </div>

  <div>
    <%= form.label :account_id, style: "display: block" %>
    <%= form.text_field :account_id %>
  </div>



  <div>
    <%= form.submit %>
  </div>
<% end %>
