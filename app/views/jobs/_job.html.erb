<div id="<%= dom_id job %>">
  <p>
    <strong>Title:</strong>
    <%= job.title %>
  </p>

  <h6><%= pluralize(job.views, "view") %></h6>

  <p>
    <strong>Description:</strong>
    <%= job.description %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= job.location %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= job.categoty %>
  </p>

  <p>
    <strong>Remote:</strong>
    <%= job.remote %>
  </p>

  <p>
    <strong>Salary:</strong>
    <%= job.salary %>
  </p>

  <p>
    <strong>Requirements:</strong>
    <%= job.requirements %>
  </p>

  <p>
    <strong>Responsibilities:</strong>
    <%= job.responsibilities %>
  </p>

  <p>
    <strong>Application deadline:</strong>
    <%= job.application_deadline %>
  </p>

  <p>
    <strong>Company:</strong>
    <%= job.company.title %>
  </p>

  <div>
    
    <%= link_to "Back to jobs", jobs_path %>

    <% if current_user && current_user.account.present? %>
      <%= link_to "Apply for this job", new_job_account_application_path(job_id: job.id, account_id: current_user.account.id) %>
    <% elsif current_user %>
      <%= link_to "Create Account", new_account_path %>
    <% else %>
      <%= link_to "Sign In", new_user_session_path %> 
<% end %>
    
</div>
